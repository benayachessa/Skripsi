---
const navLinks = [
  { name: 'Whats On', href: '#', active: true },
  { name: 'Nongki', href: '#' },
  { name: 'Kuliner', href: '#' },
  { name: 'Wisata', href: '#' },
  { name: 'Accommodation', href: '#' },
];
---

<header class="flex items-center justify-between px-8 py-4 bg-white sticky top-0 z-50 shadow-sm">
  <!-- Logo Section -->
  <div class="flex items-center gap-2">
    <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
       <!-- Ganti dengan image asli logo gajah -->
       <img src="/logo-rame-rame.png" alt="Logo" class="w-full h-full object-contain" />
    </div>
    <span class="text-2xl font-extrabold tracking-tight">Rame-Rame</span>
  </div>

  <!-- Navigation -->
  <nav class="hidden md:flex items-center gap-1">
    {navLinks.map((link) => (
      <a 
        href={link.href}
        class={`px-4 py-2 rounded-lg text-sm font-semibold transition-colors ${
          link.active 
          ? 'bg-[#9A671E] text-white' 
          : 'text-gray-700 hover:text-[#9A671E]'
        }`}
      >
        {link.name}
      </a>
    ))}
  </nav>

  <!-- Language Icon -->
  <div class="flex items-center">
    <button class="p-2 text-gray-700 hover:bg-gray-100 rounded-full">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
    </button>
  </div>
</header>